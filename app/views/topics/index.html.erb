<p id="notice"><%= notice %></p>

<h1>Topics</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Votes</th>
      <th>Lat</th>
      <th>Lng</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= link_to topic.title, topic %></td>
        <td>
          <%= link_to upvote_topic_path(topic), :method => :post, :remote => true do %>
            <i class="glyphicon glyphicon-thumbs-up"></i>
          <% end %>
          <%= topic.votes.count %>
        </td>
        <td><%= topic.lat %></td>
        <td><%= topic.lng %></td>
        <td><%= link_to 'Delete', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<div class="row">
  <div class="col-md-1">
    <%= link_to 'New Topic', new_topic_path, class: 'btn btn-primary' %>
  </div>
</div>
